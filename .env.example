# Copy this to .env and fill in your values
# chmod 600 .env

# ── Required ──────────────────────────────────────────────────────────────────
PAPERLESS_URL=http://paperless-ngx:8000
PAPERLESS_TOKEN=your-40-char-token-here

# ── Ollama ────────────────────────────────────────────────────────────────────
# Same host:
OLLAMA_URL=http://host.docker.internal:11434
# Different machine:
# OLLAMA_URL=http://192.168.1.50:11434

# ── Models ────────────────────────────────────────────────────────────────────
VISION_MODEL=llava
TEXT_MODEL=mistral

# ── Optional ──────────────────────────────────────────────────────────────────
LOG_LEVEL=INFO
BATCH_HOUR=2
